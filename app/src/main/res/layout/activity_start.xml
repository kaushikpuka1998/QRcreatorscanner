<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@drawable/qr_background">

    <Button
        android:id="@+id/generatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rightcurved_button"
        android:text="Generate The QR CODE" />

    <Button
        android:id="@+id/scanbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/left_curved_button"
        android:text="Scan QR And Bar Code"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="266dp" />

    <Button
        android:id="@+id/scannedhistorybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/rightcurved_button"
        android:text="Scanned History" />

</RelativeLayout>